<main class="main d-flex w-100">
	<div class="container d-flex flex-column">
		<div class="row h-100">
			<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
				<div class="d-table-cell align-middle">

					<div class="text-center mt-3">
						<a class="sidebar-brand h2" href="/">
							<i class="align-middle" data-feather="box"></i>
							<h1 class="h2">Empieza ahora</h1>
							<p class="lead">
								Registrate y se parte de nuestro equipo RedFlix.
							</p>
						</a>
					</div>
					<form action="/signup" method="POST">
						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<div class="alert alert-danger alert-dismissible form-group" role="alert" style="display: none;">
										<div class="alert-message">
											
										</div>
									</div>
									<div class="form-group">
										<label>Id de registro</label>
										<input class="form-control form-control-lg" id="pin" type="text"
											name="pin" placeholder="Ingrese pin de registro" />
									</div>
									<div class="form-group">
										<label>Tipo de documento</label>
										<select id="tipodoc" class="form-control form-control-lg" name='tipodoc'>
											<option value='Cedula de ciudadania'>Cedula de ciudadania</option>
											<option value='Pasaporte'>Pasaporte</option>
											<option value='Nit'>Nit</option>
											<option value='CD extrangria'>CD extrangria</option>
										</select>
									</div>
									<div class="form-group">
										<label>Documento</label>
										<input class="form-control form-control-lg" type="text" name="document"
											placeholder="Ingrese numero de documento" />
									</div>
									<div class="form-group">
										<label>Nombre</label>
										<input class="form-control form-control-lg" type="text" name="fullname"
											placeholder="Ingrese su nombre completo" />
									</div>
									<div class="form-group">
										<label>Movil</label>
										<input type="text" name="movil" class="form-control form-control-lg"
											data-mask="000-000-0000" placeholder="Ingrese su numero movil" />
									</div>
									<div class="form-group">
										<label>Email</label>
										<input class="form-control form-control-lg" type="email" name="username"
											placeholder="Ingrese email" />
									</div>
									<div class="form-group">
										<label>Contraseña</label>
										<input class="form-control form-control-lg" type="password" name="password"
											placeholder="cree su contraseña" />
										<small>
											¿Ya tienes cuenta?<a href="/signin"> Iniciar Sesion</a>
										</small>
									</div>
									<div class="text-center mt-3">
										<!-- <a href="dashboard-default.html" class="btn btn-lg btn-primary">Sign up</a> -->
										<button type="submit" id="login"
											class="btn btn-lg btn-primary h">Registrarse</button>
									</div>

								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</main>